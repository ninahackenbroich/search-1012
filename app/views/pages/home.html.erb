<h1>All Movies & Tv-Shows</h1>
<div>
  <%= form_with url: root_path, method: :get, class:"d-flex" do %>
    <%= text_field_tag :query, 
        params[:query], 
        class: "form-control", 
        placeholder: "Find a movie..." %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  
</div>
<ul>
  <% @results.each do |result| %>
    <li><%= result
     %></li>
  <% end %>
</ul>